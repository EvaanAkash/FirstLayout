<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="25dp"
    android:orientation="vertical">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="FLAT UI KIT"
       android:background="#FF8432"
       android:textColor="#fff"
       android:textSize="30sp"
       android:paddingTop="30dp"
       android:paddingBottom="30dp"
       android:gravity="center"
       android:layout_marginBottom="20dp"/> <!--first portion-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFDB4C"
            android:padding="26dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:30"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="40dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JAN 10, 2014"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20dp"

                />
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/sun"
                android:background="#FFDB4C"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25Â°"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="40dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEW YORK"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20dp"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6DD1E5"
                android:src="@mipmap/email"
                android:padding="44dp"
                android:layout_marginBottom="20dp"
                />
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6C7176"
                android:src="@mipmap/uploading"
                android:padding="44dp"
                />

        </LinearLayout>

    </LinearLayout><!--second portion-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="20dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/searching"
            android:text="WWW"
            android:textSize="40dp"
            android:padding="25dp"
            android:gravity="center"
            android:textColor="#fff"
            android:background="#FF8432"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/clock"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:background="#FFDB4C"/>



    </LinearLayout><!--Third portion-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOW PLAYING"
        android:textSize="40dp"
        android:textColor="#fff"
        android:background="#6DD1E5"
        android:gravity="center"
        android:drawableLeft="@mipmap/music"
        android:padding="20dp"/>
</LinearLayout>